<VirtualHost *:80>
        ServerName verysecureserver.com
        ServerAlias www.verysecureserver.com
        Redirect permanent / https://verysecureserver.com
</VirtualHost>




<VirtualHost _default_:443>
	ServerAdmin webmaster@localhost
	ServerName verysecureserver.com
	ServerAlias www.verysecureserver.com
	DocumentRoot /var/www/vss
	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
	SSLEngine on
	SSLCertificateFile /etc/ssl/certs/vss.crt
	SSLCertificateKeyFile /etc/ssl/certs/vss.key
	SSLCertificateChainFile /etc/ssl/certs/AcmeSubCATwo.crt
        SSLUseStapling on
        SSLStaplingResponderTimeout 5
        SSLStaplingReturnResponderErrors on

</VirtualHost>

SSLStaplingCache shmcb:/var/run/ocsp(128000)
